<div class="container">
  <h2>Become the Ghost of Recursion*</h2>
  
  <%= form_for @victim do |f| %>
    <div><%= f.text_field :name, :placeholder => "Your Victim's Name", class: 'text-field' %></div>
    <div><%= f.text_field :email, :placeholder => "Your Victim's Email", class: 'text-field' %></div>
    <div><%= f.submit "Send Email", class: 'button' %></div>
  <% end %>
  
  <h4>*Please haunt responsibly.</h4>
</div>